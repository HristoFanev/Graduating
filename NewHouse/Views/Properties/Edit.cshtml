@using NewHouse.Data
@model NewHouse.Data.Property

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @*<label asp-for="Floor" class="control-label"></label>*@
                Етаж:
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="ImageUrl" class="control-label"></label>*@
                Снимка:
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Quadrature" class="control-label"></label>*@
                Квадратура:
                <input asp-for="Quadrature" class="form-control" />
                <span asp-validation-for="Quadrature" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Status" class="control-label"></label>*@
                Статус:
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<StatusType>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="Address" class="control-label"></label>*@
                Адрес:
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="Description" class="control-label"></label>*@
               Описание:
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Price" class="control-label"></label>*@
                Цена:
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="RegisterOn" class="control-label"></label>
                <input asp-for="RegisterOn" class="form-control" />
                <span asp-validation-for="RegisterOn" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                @*<label asp-for="TypeId" class="control-label"></label>*@
                Вид на имота:
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="Type" class="control-label"></label>*@
                Категория на имота:
                <select asp-for="Type" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Към Жилищата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
